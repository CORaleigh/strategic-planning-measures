<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @focus_area, html: { class:"form-horizontal" } do |focus_area_fields| %>
      <fieldset>
        <legend><%= action_name.capitalize %> Key Focus Area Form</legend>
        
        <%= render partial: 'shared/error_messages', locals: { resource: @focus_area } %>

        <div class="form-group">
          <%= focus_area_fields.label :name, class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= focus_area_fields.text_field :name, class: "form-control" %>
          </div>
        </div>
        
        <div class="form-group">
          <%= focus_area_fields.label :goal, class: "col-md-3 control-label" %>
          <div class="col-md-9">
            <%= focus_area_fields.text_field :goal, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-9 col-md-offset-3">
            <%= link_to 'Cancel', key_focus_areas_path, class: "btn btn-default" %>
            <%= focus_area_fields.submit class: "btn btn-primary" %>
          </div>
        </div>
        
      </fieldset>
    <% end %>
  </div>
</div>