<p id="notice"><%= notice %></p>

<h1>Listing Performance Factors</h1>

<table>
  <thead>
    <tr>
      <th>Performance measure</th>
      <th>Label text</th>
      <th>Field type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @performance_factors.each do |performance_factor| %>
      <tr>
        <td><%= performance_factor.performance_measure_id %></td>
        <td><%= performance_factor.label_text %></td>
        <td><%= performance_factor.field_type %></td>
        <td><%= link_to 'Show', performance_factor %></td>
        <td><%= link_to 'Edit', edit_performance_factor_path(performance_factor) %></td>
        <td><%= link_to 'Destroy', performance_factor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

