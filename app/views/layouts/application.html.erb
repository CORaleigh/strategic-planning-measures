<!DOCTYPE html>
<html>
<head>
  
  <title>Strategic Planning</title>
  
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Raleigh Strategic Planning", root_path, class: "navbar-brand" %>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
        <ul class="nav navbar-nav">
          <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
        </ul>
        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-user"></i>
                <span>User Profile</span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, :method => :delete, class: "sign-out-button" do %>
                <i class="fa fa-sign-out"></i>
                <span>Sign Out</span>
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to new_user_registration_path do %>
                <i class="fa fa-user-plus"></i>
                <span>Sign Up</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path do %>
                <i class="fa fa-sign-in"></i>
                <span>Sign In</span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid" id = "flash-messages">
    <%= flash_messages %>
  </div>
  
  <div class="container-fluid">
    
    <%= yield %>
    
  </div>

</body>
</html>
