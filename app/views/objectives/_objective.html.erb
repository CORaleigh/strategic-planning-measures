<div class="panel panel-info" data-objective-id="<%= objective.id %>" data-objective-kfa="<%= objective.key_focus_area.try(:name) %>">
  <div class="panel-body">
    
    <div class="row">
      <label class="col-xs-3 control-label limit-text capitalize">key focus area</label>
      <div class="col-xs-9 layout-row layout-align-space-between-center">
        <p class="kfa-name"><%= objective.key_focus_area.try(:name) %></p>
        <div class="kfa-logo-card">
          <%= image_tag objective.key_focus_area.logo.url(:thumb), alt: "Key Focus Area logo", class: "img-responsive" if objective.key_focus_area.logo.present? %>
        </div>
      </div>
    </div>
    
    <div class="row">
      <label class="col-xs-3 control-label limit-text capitalize">Name</label>
      <div class="col-xs-9">
        <p><%= objective.name %></p>
      </div>
    </div>

    <div class="row">
      <label class="col-xs-3 control-label limit-text capitalize">description</label>
      <div class="col-xs-9">
        <p><%= objective.description %></p>
      </div>
    </div>

    <% if action_name == 'show' %>
      <div class="row">
        <label class="col-xs-3 control-label limit-text">Measures</label>
        <div class="col-xs-9">
          <ul>
            <% objective.measures.each do |measure| %>
              <li><%= measure.description %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>


    <% if action_name == 'show' %>
      <div class="row">
        <label class="col-xs-3 control-label limit-text">Created By</label>
        <div class="col-xs-9">
          <p><%= objective.author.try(:email) %></p>
        </div>
      </div>

      <div class="row">
        <label class="col-xs-3 control-label limit-text">Last Edited by</label>
        <div class="col-xs-9">
          <p><%= objective.last_editor.try(:email) %></p>
        </div>
      </div>
    <% end -%>

    <%= render partial: "shared/card_actions", locals: { resource: objective } %>
    
  </div>
</div>