<div class="form-group">
  <%= measure_fields.label :description, class: "col-md-3 control-label" %>
  <div class="col-md-9">
    <%= measure_fields.text_area :description, class: "form-control", required: true %>
  </div>
</div>

<div class="form-group">
  <%= measure_fields.label :target, class: "col-md-3 control-label" %>
  <div class="col-md-9">
    <%= measure_fields.text_field :target, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= measure_fields.label :unit_of_measure, class: "col-md-3 control-label" %>
  <div class="col-md-9">
    <%= measure_fields.text_field :unit_of_measure, class: "form-control", required: true %>
  </div>
</div>

<div class="form-group">
  <%= measure_fields.label :measurement_formula, class: "col-md-3 control-label" %>
  <div class="col-md-9">
    <%= measure_fields.text_field :measurement_formula, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= measure_fields.label :data_source, class: "col-md-3 control-label" %>
  <div class="col-md-9">
    <%= measure_fields.text_field :data_source, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= measure_fields.label :rationale_for_target, class: "col-md-3 control-label" %>
  <div class="col-md-9">
    <%= measure_fields.text_field :rationale_for_target, class: "form-control" %>
  </div>
</div>

<legend class="sublegend">Performance Factors</legend>

<%= measure_fields.fields_for :performance_factors do |factor_fields| %>

  <div class="form-group">
    <%= factor_fields.label :label_text, class: "col-md-3 control-label" %>
    <div class="col-md-9">
      <%= factor_fields.text_field :label_text, class: "form-control", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= factor_fields.label :field_type, class: "col-md-3 control-label" %>
    <div class="col-md-9">
      <%= factor_fields.select :field_type, [ ["Text", "text"], ["Number", "number"] ], {}, class: "form-control", requred: true %>
      
      <% if factor_fields.object.persisted? %>
        <%= factor_fields.check_box :_destroy, class: "checkbox-danger" %>
        <%= factor_fields.label :_destroy, "Delete this factor?", class: "control-label text-danger" %>
      <% end %>
    </div>
  </div>


<% end %>


<legend class="sublegend">Data Contact</legend>

<div class="form-group">
  <%= measure_fields.label :data_contact_person, "Name", class: "col-md-3 control-label" %>
  <div class="col-md-9">
    <%= measure_fields.text_field :data_contact_person, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= measure_fields.label :data_contact_person_email, "Email", class: "col-md-3 control-label" %>
  <div class="col-md-9">
    <%= measure_fields.text_field :data_contact_person_email, class: "form-control" %>
  </div>
</div>

<legend class="sublegend">Person Reporting to BMS</legend>

<div class="form-group">
  <%= measure_fields.label :person_reporting_data_to_bms, "Name", class: "col-md-3 control-label" %>
  <div class="col-md-9">
    <%= measure_fields.text_field :person_reporting_data_to_bms, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= measure_fields.label :person_reporting_data_to_bms_email, "Email", class: "col-md-3 control-label" %>
  <div class="col-md-9">
    <%= measure_fields.text_field :person_reporting_data_to_bms_email, class: "form-control" %>
  </div>
</div>

<legend class="sublegend">Extras</legend>

<div class="form-group">
  <%= measure_fields.label :notes, class: "col-md-3 control-label" %>
  <div class="col-md-9">
    <%= measure_fields.text_area :notes, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="col-md-9 col-md-offset-3">
    <%= link_to 'Cancel', performance_measures_path, class: "btn btn-default" %>
    <%= measure_fields.submit class: "btn btn-primary" %>
  </div>
</div>