<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for @performance_measure, html: { class:"form-horizontal" } do |measure_fields| %>
      <fieldset>
        <legend><%= action_name.capitalize %> Performance Measure Form</legend>
        
        <%= render partial: 'shared/error_messages', locals: { resource: @performance_measure } %>
        
        <div id="key-focus-area-selection">
          <% @performance_measure.parents.each_with_index do |parent, idx| %>  
            <div class="form-group">
              <label for="key_focus_area_id" class="col-md-3 control-label"><%= parent.model_name.human %></label>
              <div class="col-md-9">
                
                <div class="row">
                  <div class="col-xs-8">
                    <p><%= parent.try(:name) %></p>
                  </div>
                  <div class="col-xs-4 text-right">
                    <%= link_to "Update Measurable", "#", id: "update-measurable" if idx == 0 %>
                  </div>
                </div>

              </div>
            </div>
          <% end %>
        </div>

        <%= measure_fields.hidden_field(:measurable_type) %>

        <div id="edit-measure-fields" class="edit-measure-fields">
          <%= render partial: 'form', locals: { measure_fields: measure_fields } %>
        </div>
        
      </fieldset>
    <% end %>
  </div>
</div>