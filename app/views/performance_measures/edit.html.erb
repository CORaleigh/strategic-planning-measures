<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for @performance_measure, html: { class:"form-horizontal" } do |measure_fields| %>
      <fieldset>
        <legend><%= action_name.capitalize %> Performance Measure Form</legend>
        
        <%= render partial: 'shared/error_messages', locals: { resource: @performance_measure } %>

        <div class="form-group" id="key-focus-area-selection">
          <label for="key_focus_area_id" class="col-md-3 control-label"><%= @performance_measure.measurable.model_name.human %></label>
          <div class="col-md-9">
            
            <div class="row">
              <div class="col-xs-8">
                <p><%= @performance_measure.measurable.try(:name) %></p>
              </div>
              <div class="col-xs-4 text-right">
                <a id="update-measurable">Update Measurable</a>
              </div>
            </div>

          </div>
        </div>

        <%= measure_fields.hidden_field(:measurable_type) %>

        <div id="edit-measure-fields" class="edit-measure-fields">
          <%= render partial: 'form', locals: { measure_fields: measure_fields } %>
        </div>
        
      </fieldset>
    <% end %>
  </div>
</div>